{
    "plugins": ["prettier-plugin-tailwindcss"],
    "semi": false,
    "useTabs": true,
    "printWidth": 100,
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "useTabs": false,
                "tabWidth": 4
            }
        },
        {
            "files": "package.json",
            "options": {
                "useTabs": false,
                "tabWidth": 2
            }
        }
    ]
}
